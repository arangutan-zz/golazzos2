<article id="miapuesta" class="miApuesta">
		<div class="marcadorCentrado">
			<h1 class="azul-claro centrado">Apuesta al Marcador</h1>
			<div class="escudoequipo">
				<%= image_tag @partido.logolocal %>
				<h3> <%= @partido.local %></h3>
			</div>
			<div class="datospartido">
				<div class="Liga">
					<%= @partido.nombre_torneo %>
				</div>
				<div class="hora">
					<%= @partido.hora_partido %>
				</div>
				<div class="vs">VS</div>
				<div class="clear"></div>
				<div class="marcadores">
					<input align="middle" class="marcador marcadoruser marcadorlocal"
									 max="10" min="0" name="bet[golesLocal]" 
					 placeholder="0" size="10px" type="number"
					       value="0">
          <input align="middle" class="marcador marcadoruser marcadoruservisitante marcadorvisitante"
                   max="10" min="0" 
                  name="bet[golesLocal]" placeholder="0" size="10px" 
                  type="number" value="0">
				</div>
			</div>
			<div class="escudoequipo">
				<%= image_tag @partido.logovisitante %>
         <h3> <%= @partido.visitante %></h3>
			</div>
			<div>
				<%= render "new_bet_form"%>				
			</div>
		</div>
</article>