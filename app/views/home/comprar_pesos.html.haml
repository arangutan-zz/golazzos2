	%input{type: "hidden",name:"merchantId", value:"503728"}
	%input{type:"hidden" ,name:"ApiKey" ,value:"3u3skvsqrab1sp9rk4d83vnkto"}
	%input{type:"hidden" ,name:"referenceCode" ,value:"1"}
	%input{type:"hidden" ,name:"accountId" ,value:"504663"}
	%input{type:"hidden" ,name:"description" ,value:"Recargar cuenta de #{current_user.name}"}
