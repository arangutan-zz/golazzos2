	%br
	%input{type: "submit", value: "Recargar", class:"btn btn-primary", id:"btn_recarga"}
.emailcontacto
	= image_tag "partido/partido_fondoPersonaje.png"


%script{src:"http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"}
%script{src:"http://crypto-js.googlecode.com/svn/tags/3.1.2/build/rollups/md5.js"}

:javascript 
	$(function(){
		$('#btn_recarga').on('click',function(e){
			e.preventDefault();
			var hash = CryptoJS.MD5("3u3skvsqrab1sp9rk4d83vnkto~"+Math.floor((Math.random()*10000000000)+1)+"~"+$("#monto_r").val().trim()+"~MXN");
			$("#signa").val(hash);
			console.log(hash.toString());
			$("#form_compra").submit();
		});
		//ApiKey~merchantId~referenceCode~tx_value~currency
	});	

