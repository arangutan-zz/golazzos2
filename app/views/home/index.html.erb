  <% if flash[:notice]%>
  <div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= flash[:notice] %>
  </div>
  <% end %>

  <section id="bienvenida">
    <div id="myCarousel" class="carousel slide">
      <!-- Carousel items -->
      <div class="carousel-inner">
        <div class="active item">
          <%= image_tag "golazzos2/banner1.png" %>
        </div>
        <div class="item">
          <%= image_tag "golazzos2/banner2.png" %>
        </div>
        <div class="item">
          <%= image_tag "golazzos2/banner3.png" %>
        </div>
      </div>
      <!-- Carousel nav -->
      <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
      <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
    </div>
    <h1 class="frasehome"> APUESTAS EN FÚTBOL RETANDO A TUS AMIGOS</h1>
    <%= render "partidos/redes_sociales" %>
  </section>      

  <section id="partidosSabrozzos" class="clear">
    <header >
      <h2 class="titulosseccion clear">PARTIDOS SABROZZOS</h2>
    </header>  
    <%@partidos.each do |partido| %>
    <a href=<%= partido_path(partido)%>> 
      <article class="cajamarcador">
        <div class="marcadorCentrado">
          <div class="escudoequipo">
           <%= image_tag partido.logolocal %>
           <h3> <%= partido.local %></h3>
         </div>
         <div class="datospartido">
          <div class="Liga"><%= partido.nombre_torneo %></div>
          <div class="vs">VS</div>
          <div class="hora"><%= partido.hora_partido %></div>
          <%if @partido.users.uniq.count >=10%>
            <div class="pjugando2"><%= pluralize(partido.users.uniq.count, "persona") %> jugando</div>
          <%end%>
        </div>
        <div class="escudoequipo">
          <%= image_tag partido.logovisitante %>
          <h3> <%= partido.visitante %></h3>
        </div>
      </div>
      <div class="botcontinuar"></div>
    </article>
  </a>
  <%end %>
  <div class="masPartidos"><%= link_to "ver mas partidos", partidos_path %></div> 
</section>

