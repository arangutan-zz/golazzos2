  <% if flash[:notice]%>
  <div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= flash[:notice] %>
  </div>
  <% end %>

  <section id="bienvenida">
    <div class="imgbienvenida5">
      <div class="container text-center">
        <div class="row">
          <div class="span7 offset3 text-center home-banner home-banner-top">
          El juego online donde
          </div>
        </div>
        <div class="row">
          <div class="span7 offset3  text-center home-banner">
            Apuestas y Ganas
          </div>
        </div>
       </div>
    </div>
    <div class="titulosseccion">
      <%= render "partidos/redes_sociales" %>
    </div>
    
  </section>      

  <section id="partidosSabrozzos" class="clear">
    <header >
      <h1 class="azul-claro text-center">
        Apuesta Ya!
      </h1>
      <p class="azul-claro text-center">
        Acierta el marcador en los Partidos Sabrozzos
      </p>

    </header>  
    <%@partidos.each do |partido| %>
    
      <article class="cajamarcador">
        <div class="marcadorCentrado">
          <div class="escudoequipo">
           <%= image_tag partido.logolocal , class:"img-circle" %>
           <h3> <%= partido.local %></h3>
         </div>
         <div class="datospartido">
          <div class="Liga"><%= partido.nombre_torneo %></div>
          <div class="vs">VS</div>
          <div class="marcadores">
              <input align="middle" class="marcadoruser" id="bet_golesLocal" max="10" min="0" name="bet[golesLocal]" placeholder="0" size="10px" type="number">
              <input align="middle" class="marcadoruser1 " id="bet_golesLocal" max="10" min="0" name="bet[golesLocal]" placeholder="0" size="10px" type="number">
          </div>

          <div class="hora"><%= partido.hora_partido %></div>
          <%if partido.users.uniq.count >=10%>
            <div class="pjugando2"><%= pluralize(partido.users.uniq.count, "persona") %> jugando</div>
          <%end%>
          

          <a href=<%= partido_path(partido)%> class="btn-apostar">APOSTAR</a>
        </div>
        <div class="escudoequipo">
          <%= image_tag partido.logovisitante %>
          <h3> <%= partido.visitante %></h3>
        </div>
      </div>
    </article>
  <%end %>
  <div class="masPartidos">
    <%= link_to "Todos los partidos", partidos_path, class:'btn-azul-oscuro' %>
  </div> 
</section>

